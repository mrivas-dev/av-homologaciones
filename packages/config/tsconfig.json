{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Config Package",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false
  },
  "include": [
    "**/*",
    "*.js",
    "*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ]
}
